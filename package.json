{
  "name": "oro-sftp",
  "version": "2.1.2",
  "description": "OroSftp Class is a wrapper of ssh2-sftp-client to work as promises async/await and typescript.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "coverage:open": "node coverage.open.js",
    "coverage-open": "jest --coverage && node coverage.open.js",
    "lint": "eslint .",
    "prettier": "prettier --write .",
    "clean": "rm -R ./dist",
    "clean:all": "rm -R ./dist ./node_modules ./coverage",
    "build": "tsup ./src/index.ts",
    "watch": "nodemon"
  },
  "keywords": [
    "ftp",
    "sftp",
    "promise",
    "async/await",
    "typescript"
  ],
  "author": "Carlos Oropesa <carlos@oropensando.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oropesa/oro-sftp.git"
  },
  "bugs": {
    "url": "https://github.com/oropesa/oro-sftp/issues"
  },
  "homepage": "https://github.com/oropesa/oro-sftp#readme",
  "dependencies": {
    "fs-extra": "^11.2.0",
    "oro-functions": "^2.3.4",
    "ssh2-sftp-client": "^11.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0",
    "@eslint/js": "^9.17.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.0",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/ssh2-sftp-client": "^9.0.4",
    "babel-jest": "^29.7.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.10.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unicorn": "^56.0.1",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2"
  }
}
